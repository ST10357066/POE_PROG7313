<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:id="@+id/layoutGoalSetup"
    tools:context=".Feature1BudgetingandGoalTracking.GoalSetupFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textGoalSetupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set New Goal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Goal Name"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editGoalTargetAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target Amount"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editGoalDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deadline"
                android:inputType="date"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editGoalNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description / Notes (optional)"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/buttonSaveGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Goal"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>