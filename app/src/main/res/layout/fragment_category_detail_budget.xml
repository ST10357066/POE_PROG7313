<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feature1BudgetingandGoalTracking.CategoryDetailBudgetFragment">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutCategoryDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Category Name & Budget Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCategoryAllocated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allocated: $500"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textCategorySpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent: $350"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Spending Trend Graph Placeholder -->
        <FrameLayout
            android:id="@+id/spendingChartContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray">
            <!-- Replace with a chart view (e.g., LineChart from MPAndroidChart) -->
        </FrameLayout>

        <!-- Transaction List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTransactions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonAdjustBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjust Budget" />

            <Button
                android:id="@+id/buttonAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Expense"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>