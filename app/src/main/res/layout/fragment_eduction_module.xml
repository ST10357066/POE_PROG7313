<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Module Title -->
        <TextView
            android:id="@+id/moduleDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Investment Basics: Starting Early"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Module Image -->
        <ImageView
            android:id="@+id/moduleDetailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_investment"
            android:layout_marginBottom="16dp" />

        <!-- Module Detailed Description -->
        <TextView
            android:id="@+id/moduleDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get introduced to key investment concepts like diversification, risk management, and the benefits of starting early in building wealth. In this module, you will learn how investing at an early age can help compound your returns over time, reduce the impact of market volatility, and secure a stronger financial future."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Additional Dummy Content for Rapid Prototyping -->
        <TextView
            android:id="@+id/additionalInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Topics Covered:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/additionalInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• The power of compounding\n• Diversification strategies\n• Risk and return basics\n• Building a long-term portfolio"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/furtherReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For more detailed insights, check out our additional resources and expert guides on investment strategies."
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
